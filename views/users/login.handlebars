<div class="row pt-3">
    <div class="col-sm-10 col-md-6 col-lg-4 mx-auto">
        <div class="card card-body pb-2">
            <img src="/img/checklist.svg" class="rounded mx-auto d-block" style="width:72px; height:auto">
            <h3 class="text-center">Account Login</h3>
            <form method="post" action="/user/login" class="mb-0">
                <div class="form-group">
                    <label for="email" class="bmd-label-floating">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password" class="bmd-label-floating">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>