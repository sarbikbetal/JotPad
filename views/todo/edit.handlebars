{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">{{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{else}}

{{/each}}


<div class="row pt-3">
    <div class="card card-body col-sm-10 col-md-6 col-lg-4 mx-auto">
        <h3>Edit To-Do</h3>
        <form action="/todo/{{todo.id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" rows='2' data-min-rows='2' value="{{todo.title}}" required>
            </div>
            <div class="form-group">
                <label for="details">Details</label>
                <textarea class="form-control autoExpand" name="details" required>{{todo.details}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>